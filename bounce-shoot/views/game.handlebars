{{#section "game"}}
  <style>
    body {
        font-family: 'Harmattan', sans-serif;
    }
    #result {
      width: 100%;
      height: 100%;
      margin: auto;
    }

    #greetings {
      width: 400px;
      height: 30px;
      position: fixed;
      margin-top: 300px;
      left: 37%;
    }
    #score {
      width: 400px;
      height: 30px;
      position: fixed;
      margin-top: 350px;
      left: 37%;
    }
    #return {
      position: fixed;
      margin-top: 420px;
      left: 45%;
    }
  </style>

{{/section}}

<div id="result" style="display: none;">
  <p id="greetings">Hi there, the ghost of <b>{{name}}</b>!</p>
  <p id="score"></p>
  <button id="return">Back to Home</button>
</div>

<form method="post" action="/game" style="display: none;">
  <input id="playerId" type="text" value = {{_id}} name="id">
  <input id="scoreInput" type="text" name="score">
  <input id="submitScore" type="submit">
</form>
